{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "util/*": [ "util/*" ],
        }
    },
    "include": [
        "src/**/*",
    ]
}
